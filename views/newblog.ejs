<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui medium header">
            New Post
        </div>
        <form class="ui form" action="/blog" method="POST">
            <div class="field">
                <label>Post Name</label>
                <input type="text" name="title" id="" placeholder="Enter post Name">
            </div>
            <div class="field">
                <label>Image for the Post</label>
                <input type="text" name="image" id="" placeholder="Image Link" required>
            </div>
            <div class="field">
                <label>Content</label>
                <textarea name="blogbody" id="" placeholder="Enter your post"></textarea>
            </div>
            <input class="ui button" type="submit" value="Submit">
        </form>
    </div>